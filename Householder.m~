function [ At ] = Householder( A, b )
%HOUSEHOLDER Summary of this function goes here
%   Detailed explanation goes here
    [m, n] = size(A);
    A = [A b];
    At = zeros(m, n);
    for i=1:n
        B = A(i:m,i:n+1);
        z = B(:,i);
        I = eye(m+1-i);
        v = (sign(z(1)) * norm(z) * I(:,1)) + z;
        v = v/norm(v);
        B = B - 2 * v * (v' * B);
        At(i:m,i:n+1) = B;
end

